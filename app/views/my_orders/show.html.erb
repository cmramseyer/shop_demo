
<div class="card card-purchase">
  <div class="card-header">
    <p class="card-text"><strong><%= @order.user.email %></strong> ordered <strong>products</strong></p>
  </div>
  <div class="card-body">
    <h5 class="card-title">Details</h5>
    <p class="card-text">Total amount: <%= number_to_currency(@order.total_amount) %></p>
  </div>
</div>


<div class="card card-purchase">
  <div class="card-body">
    <p class="card-text">This order was paid with Credit Card Number: <%= @payment.credit_card_number %></p>
    <p class="card-text">at: <%= @payment.created_at %></p>
  </div>
</div>

<%= @order.decorate.link_to_pay %>