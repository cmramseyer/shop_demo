<%= render partial: '/layouts/search_form', locals: {search: @new_search} %>

<p> Results for: <%= @keywords %></p>
<table class="table">
	<thead>
		<tr>
			<th>Type</th>
			<th>Overview</th>
			<th>Date</th>
		</tr>
	</thead>
	<tbody>
		<% @records.each do |record| %>
			<tr>
				<td><%= record.class.name %></td>
				<td><%= record.try(:title) || record.try(:name) %></td>
				<td><%= record.created_at %></td>
			</tr>
		<% end %>
	</tbody>
</table>