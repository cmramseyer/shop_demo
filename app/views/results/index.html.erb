<p> Results for: <%= @keywords %></p>

<h3>Categories</h3>
<% @categories.each do |category| %>
	<%= link_to "#{category[:key]}: #{category[:doc_count]}", results_path(search_id: @search.id, category_name: category[:key])  %>
<% end %>

<h3>Brands</h3>
<% @brands.each do |brand| %>
	<%= link_to "#{brand[:key]}: #{brand[:doc_count]}", results_path(search_id: @search.id, brand: brand[:key]) %>
<% end %>


<table class="table">
	<thead>
		<tr>
			<th>Type</th>
			<th></th>
			<th>Overview</th>
			<th>Date</th>
		</tr>
	</thead>
	<tbody>
		<% @records.each do |record| %>
			<tr>
				<td><%= record.type %></td>
				<td><%= record.title %></td>
				<td><%= record.overview %></td>
				<td><%= record.created_at %></td>
			</tr>
		<% end %>
	</tbody>
</table>